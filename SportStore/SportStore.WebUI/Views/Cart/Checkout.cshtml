@model SportStore.Domain.Entities.ShippingDetails

@{ 
    ViewBag.Title = "SportStore: Checkout";
}

<h2>确认下单</h2>
Please enter your details, and we'll ship your goods right away!
@using (Html.BeginForm())
{
    @Html.ValidationSummary();
    <h3>用户</h3>
    <div>昵称:@Html.EditorFor(x => x.Name)</div>
    <h3>地址</h3>
    <div>城市: @Html.EditorFor(x => x.Province)</div>
    <div>省份: @Html.EditorFor(x => x.City)</div>
    <div>地址: @Html.EditorFor(x => x.Line1)</div>

    <h3>备注</h3>
    <label>
        @Html.EditorFor(x => x.GifWrap)
        使用礼品包装
    </label>

    <p align="center">
        <input class="actionButtons" type="submit" name="completeOrder" value="确认下单" />
    </p>

}